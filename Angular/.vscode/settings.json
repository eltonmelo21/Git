// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        
        // Oculta arquivos com extensão .js e .js.map no workspace deste projeto
        // Mostra apenas os arquivos com extensão .ts
        "**/*.js.map": true,
        "**/*.js": {
            "when": "$(basename).ts"
        }

    }
}